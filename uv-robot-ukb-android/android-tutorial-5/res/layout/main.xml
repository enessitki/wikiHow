<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/primary_color">

    <TextView
        android:id="@+id/textview_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dip"
        android:gravity="fill_horizontal"
        android:orientation="horizontal"
        android:layout_margin="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_connect"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:contentDescription="@string/button_connect"
                android:background="@drawable/ic_wifi_white_24dp"
                android:text="@string/button_connect"
                android:onClick="checkConnection"/>

            <ImageButton
                android:id="@+id/button_play"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:contentDescription="@string/button_play"
                android:background="@drawable/ic_play_arrow_white_24dp"
                android:text="@string/button_play"
                android:onClick="playStream"/>

            <ImageButton
                android:id="@+id/button_video_flip"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:contentDescription="@string/button_video_flip"
                android:background="@drawable/ic_rotate_left_white_24dp"
                android:text="@string/button_video_flip"
                android:onClick="flipVideo" />

            <ImageButton
                android:id="@+id/button_screen_shot"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:contentDescription="@string/button_screen_shot"
                android:background="@drawable/ic_add_a_photo_white_24dp"
                android:text="@string/button_screen_shot"
                android:onClick="screenShot"/>

            <ImageButton
                android:id="@+id/button_motion_detect"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:contentDescription="@string/button_motion_detect"
                android:background="@drawable/ic_directions_walk_white_24dp"
                android:text="@string/button_motion_detect"
                android:onClick="startMotionDetection"/>

            <ImageButton
                android:id="@+id/button_record"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:contentDescription="@string/button_record"
                android:background="@drawable/ic_stop_white_24dp"
                android:text="@string/button_record"
                android:onClick="startRecoding"/>

            <ImageButton
                android:id="@+id/button_config"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:contentDescription="@string/button_config"
                android:background="@drawable/ic_settings_white_24dp"
                android:text="@string/button_config"
                android:onClick="showConfigDialog"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/layout_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.freedesktop.gstreamer.tutorials.tutorial_5.GStreamerSurfaceView
                    android:id="@+id/surface_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal" />
            </FrameLayout>



            <io.github.controlwear.virtual.joystick.android.JoystickView
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/control_1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                custom:JV_buttonColor="@color/secondary_color_dark"
                custom:JV_buttonSizeRatio="15%"
                custom:JV_borderColor="#00796B"
                custom:JV_backgroundColor="#00000000"
                custom:JV_borderWidth="4dp"
                custom:JV_fixedCenter="false"
                android:layout_gravity="bottom"/>

            <io.github.controlwear.virtual.joystick.android.JoystickView
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/control_2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                custom:JV_buttonColor="@color/secondary_color_dark"
                custom:JV_buttonSizeRatio="15%"
                custom:JV_borderColor="#00796B"
                custom:JV_backgroundColor="#00000000"
                custom:JV_borderWidth="4dp"
                custom:JV_fixedCenter="false"
                android:layout_gravity="end|bottom"/>


        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <SeekBar
                    android:id="@+id/image_ika_battery"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/battery_selector_thumb"
                    android:progressDrawable="@drawable/battery_selector"
                    android:max="100"
                    android:progress="100"
                    android:layout_marginLeft="@dimen/spacer"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false"/>

                <TextView
                    android:id="@+id/text_ika_battery_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size"
                    android:textColor="@android:color/white"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_direction"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:contentDescription="@string/image_direction"
                    android:background="@drawable/ic_navigation_white_24dp"
                    android:text="@string/image_direction"/>

                <ImageView
                    android:id="@+id/image_arm_position"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:contentDescription="@string/image_arm_position"
                    android:background="@drawable/ic_arrow_back_white_24dp"
                    android:text="@string/image_arm_position" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_led_front"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:contentDescription="@string/image_led_front"
                    android:background="@drawable/ic_brightness_1_black_24dp"
                    android:text="@string/image_led_front"
                    android:onClick="setFrontLedState"/>

                <ImageView
                    android:id="@+id/image_led_back"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:contentDescription="@string/image_led_back"
                    android:background="@drawable/ic_brightness_1_black_24dp"
                    android:text="@string/image_led_back"
                    android:onClick="setBackLedState"/>

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_imu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contextClickable="true"
                android:entries="@array/imu_commands"/>

            <Spinner
                android:id="@+id/spinner_drive_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contextClickable="true"
                android:entries="@array/speed_mode"/>

            <Spinner
                android:id="@+id/spinner_drive_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contextClickable="true"
                android:entries="@array/drive_mode"/>

            <Spinner
                android:id="@+id/spinner_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contextClickable="true"
                android:entries="@array/camera"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
